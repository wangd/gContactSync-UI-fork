<?xml-stylesheet href="chrome://global/skin/" type="text/css"?>
<!DOCTYPE overlay SYSTEM "chrome://gContactSync/locale/overlay.dtd">

<overlay id="gContactSync-abEditCardDialogOverlay"
         xmlns="http://www.mozilla.org/keymaster/gatekeeper/there.is.only.xul"
         height="480" width="800">
  <!-- since the tabbox doesn't have an ID, this overlay uses JavaScript to
       add a tab -->
  <script src="StringBundle.js"/>
  <script src="synonyms.js"/>
  <script src="FileIO.js"/>
  <script src="Pref.js"/>
  <script src="Preferences.js"/>
  <script src="GElement.js"/>
  <script src="AbManager.js"/>
  <script src="GAbManager.js"/>
  <script src="TBContact.js"/>
  <script src="AddressBook.js"/>
  <script src="GAddressBook.js"/>
  <script src="MailList.js"/>
  <script src="GMailList.js"/>
  <script src="Namespace.js"/>
  <script src="gdata.js"/>
  <script src="Logger.js"/>
  <script src="CardDialogOverlay.js"/>

  <stringbundleset id="stringbundleset">
    <stringbundle id="gContactSyncStringBundle"
                  src="chrome://gContactSync/locale/gcontactsync.properties"/>
  </stringbundleset>

  <tabpanels id="abTabPanels" flex="1">
    <vbox index="gcontactsync" flex="1">
      <hbox>
        <vbox>
          <vbox id="gcontactSyncFields" class="alignBoxWithFieldset" align="left">
            <groupbox flex="1">
            <caption label="&email.box;"/>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="ThirdEmail" flex="1" class="uri-element"/>
              </hbox>
            </hbox>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="FourthEmail" flex="1" class="uri-element"/>
              </hbox>
            </hbox>
          </groupbox>
          <groupbox flex="1">
            <caption label="&screenname.box;"/>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="TalkScreenName" flex="1"/>
              </hbox>
            </hbox>
            <hbox>
             <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="ICQScreenName" flex="1"/>
              </hbox>
            </hbox>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="YahooScreenName" flex="1"/>
              </hbox>
            </hbox>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="MSNScreenName" flex="1"/>
              </hbox>
            </hbox>
            <hbox>
              <spacer flex="1"/>
              <hbox class="CardEditWidth">
                <textbox id="JabberScreenName" flex="1"/>
              </hbox>
            </hbox>
          </groupbox>
          <!-- This groupbox is hidden because it is only used before Mailnews
                 Bug 63941 was applied and reorganized the card dialog -->
          <groupbox id="numbersGroupBox" flex="1" hidden="true">
            <caption label="&numbers.box;"/>
            <hbox>
              <spacer flex="1"/>
              <label control="HomeFaxNumber" value="&sixth.label;" class="CardEditLabel"/>
              <hbox class="CardEditWidth">
                <textbox id="HomeFaxNumber" flex="1"/>
              </hbox>
            </hbox>
            <hbox>
              <spacer flex="1"/>
              <label control="OtherNumber" value="&seventh.label;" class="CardEditLabel"/>
              <hbox class="CardEditWidth">
                <textbox id="OtherNumber" flex="1"/>
              </hbox>
            </hbox>
          </groupbox>
        </vbox>
      </vbox>
      <vbox id="relationFields" hidden="true">
          <vbox id="gcontactSyncFields2" class="alignBoxWithFieldset" align="left">
            <groupbox flex="1">
              <caption label="&relations.box;"/>
              <hbox id="Relation0Box">
                <spacer flex="1"/>
                <hbox>
                  <textbox id="Relation0" class="uri-element" width="180px"/>
                </hbox>
              </hbox>
              <hbox id="Relation1Box">
                <spacer flex="1"/>
                <hbox>
                  <textbox id="Relation1" class="uri-element" width="180px"/>
                </hbox>
              </hbox>
              <hbox id="Relation2Box">
                <spacer flex="1"/>
                <hbox>
                  <textbox id="Relation2"  class="uri-element" width="180px"/>
                </hbox>
              </hbox>
              <hbox id="Relation3Box">
                <spacer flex="1"/>
                <hbox>
                  <textbox id="Relation3" class="uri-element" width="180px"/>
                </hbox>
              </hbox>
            </groupbox>
          </vbox>
      </vbox>
      </hbox>
    </vbox>          
  </tabpanels>
</overlay>
