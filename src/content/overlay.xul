  <script src="synonyms.js"/>
  <script src="StringBundle.js"/>
  <script src="Namespace.js"/>
  <script src="GElement.js"/>
  <script src="gdata.js"/>
  <script src="AbListener.js"/>
  <script src="Group.js"/>
  <script src="GContact.js"/>
  <script src="MailList.js"/>
  <script src="Pref.js"/>
  <script src="FileIO.js"/>
  <script src="Preferences.js"/>
  <script src="Logger.js"/>
  <script src="Overlay.js"/>
  <script src="AddressBook.js"/>
  <script src="ConverterElement.js"/>
  <script src="ContactConverter.js"/>
  <script src="onDrop.js"/>
  <script src="Sync.js"/>
  <script src="HttpRequest.js"/>
  <script src="GHttpRequest.js"/>
  <script src="LoginManager.js"/>
  <!-- String bundle set containing localized error and status messages and more -->
  <stringbundleset id="stringbundleset">
    <stringbundle id="otherStringBundle"
                  src="chrome://gContactSync/locale/gcontactsync.properties"/>
  </stringbundleset>

